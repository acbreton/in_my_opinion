{
  "name": "In My Opinion",
  "version": "0.1",
  "description": "Remove critic and fan review ratings from search results and various websites",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "browser_action": {
    "default_title": "In My Opinion",
    "default_popup": "modal.html",
    "default_icon": {
      "16": "images/imo16.png",
      "32": "images/imo32.png",
      "48": "images/imo48.png",
      "128": "images/imo128.png"
    },
    "icons": {
      "16": "images/imo16.png",
      "32": "images/imo32.png",
      "48": "images/imo48.png",
      "128": "images/imo128.png"
    }
  },
  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*"],
    "js" : ["contentScript.js"],
    "run_at": "document_end"
  }],
  "manifest_version": 2
}